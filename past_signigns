<body>

    <h1>Past Signings</h1>
    <div id="calendar-container" class="calendar"></div>
    
    <div id="pdf-viewer" class="pdf-viewer">
        <h3>Signed PDF</h3>
        <iframe id="pdf-frame" src="" frameborder="0"></iframe>
    </div>

    <script>
        // Calendar generation function
        function generateCalendar() {
            const calendarContainer = document.getElementById('calendar-container');
            const currentDate = new Date();
            const currentYear = currentDate.getFullYear();
            const currentMonth = currentDate.getMonth();

            // Find first day of the month
            const firstDayOfMonth = new Date(currentYear, currentMonth, 1);
            const firstDay = firstDayOfMonth.getDay();  // 0-6 (Sunday-Saturday)

            // Get the number of days in the current month
            const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();

            // Create the grid for the calendar
            let calendarHtml = '';
            let dayCounter = 1;

            // Add empty days before the first day
            for (let i = 0; i < firstDay; i++) {
                calendarHtml += '<div class="calendar-day"></div>';
            }

            // Add days of the month
            for (let i = firstDay; i < 7; i++) {
                calendarHtml += `<div class="calendar-day" onclick="viewPDF(${dayCounter})">${dayCounter}</div>`;
                dayCounter++;
            }

            // Add remaining days
            while (dayCounter <= daysInMonth) {
                for (let i = 0; i < 7 && dayCounter <= daysInMonth; i++) {
                    calendarHtml += `<div class="calendar-day" onclick="viewPDF(${dayCounter})">${dayCounter}</div>`;
                    dayCounter++;
                }
            }

            // Insert the calendar HTML
            calendarContainer.innerHTML = calendarHtml;
        }

        // Fetch and display the PDF for the selected day
        function viewPDF(day) {
            const savedPDFs = JSON.parse(localStorage.getItem('savedPDFs')) || [];
            const selectedPDF = savedPDFs.find(pdf => new Date(pdf.date).getDate() === day);

            if (selectedPDF) {
                const pdfViewer = document.getElementById('pdf-viewer');
                const pdfFrame = document.getElementById('pdf-frame');
                pdfViewer.style.display = 'block';
                pdfFrame.src = selectedPDF.url;
            } else {
                alert('No PDF found for this date.');
            }
        }

        // Generate the calendar on page load
        generateCalendar();
    </script>

</body>
</html>
